<div>
  {{#each posts as |post|}}
    <div class="card">
      <div class="card-header ">
        <h2>
          <a href="/post/{{id}}">
            <div>{{postTitle}}</div>
          </a>
        </h2>
        <div>posted by {{user.username}} on {{format_date dateCreated}}</div>
      </div>  
      <p class="card-body">{{postContent}}</p>
    </div>
  {{/each}}
</div>
