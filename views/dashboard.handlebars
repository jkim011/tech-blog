<div class="row col-auto">
  <h2>Your Posts: </h2>
</div>

<br>

{{#if posts.length}}
<div class="card flex-column">
  {{#each posts as |post|}}
    <div class="card-body">
      <a href="dashboard/edit/{{id}}">
        <div class="card-header flex-row justify-space-between">
          <div class="col-8">Post Title: {{postTitle}}</div>
          <div class="col-4">posted by {{user.username}} on {{format_date dateCreated}}</div>
        </div>  
      </a>
    </div>
  {{/each}}
</div>
{{/if}}

<footer class="footer flex-row justify-center">
  <a href="/dashboard/new">New Post</a>
</footer>