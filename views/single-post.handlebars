<div class="card">
  <div class="card-header ">
    <h2>
      <a href="/post/{{post.id}}">
        <div>{{post.postTitle}}</div>
      </a>
    </h2>
    <div>posted by {{post.user.username}} on {{format_date post.dateCreated}}</div>
  </div>  

  <p class="card-body">
   {{post.postContent}}
  </p>
</div>
<input type="hidden" name="post-id" value="{{post.id}}"/>

<div class="card">
  <div class="card-header"></div>

  <form class="card-body" id="new-comment-form">  
    <p class="form-label">Comment:</p>
    <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  <div class="comments">
    {{#each post.comments as |comment|}}
      <div>
        <p>
        {{commentContent}} - {{user.username}} {{format_date dateCreated}}
        </p>
      </div>
    {{/each}}
  </div>
</div>

<script src="/js/comment.js"></script>